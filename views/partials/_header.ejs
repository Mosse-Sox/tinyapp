<header>
  <!-- basic navbar -->
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <!-- if a user is logged in -->
      <% if (user) { %>
      <form class="form-inline" action="/logout" method="POST">
        <h5 style="margin: 1em; color: black" class="card-title">
          Logged in as: <%= user.email %>!
        </h5>
        <button type="submit" class="btn btn-outline-dark btn-lg">
          Logout
        </button>
      </form>
      <!-- if a user is not logged in -->
      <% } else { %>
      <div class="navbar">
        <a href="/register" class="nav-item nav-link" style="color: black">Register</a>
        <a href="/login" class="nav-item nav-link" style="color: black">Login</a>
      </div>
      <% } %>
    </div>
  </nav>
</header>
